{
    "name": "netsplit/textlocal",
    "type": "library",
    "description": "A generic Textlocal SMS library",
    "keywords": [
        "netsplit",
        "textlocal"
    ],
    "homepage": "https://git.netsplit.uk/mike/netsplit-textlocal",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Jones",
            "email": "mike@netsplit.org.uk",
            "homepage": "https://netsplit.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "curl/curl": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Netsplit\\Textlocal\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Netsplit\\Textlocal\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
